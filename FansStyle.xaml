<UserControl x:Class="HttpDemo.FansStyle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
	<Grid>
		<StackPanel Orientation="Horizontal" Width="200">
			<Ellipse Width="70" Height="70" Stroke="BurlyWood" StrokeThickness="3" >
			
			</Ellipse>
			<StackPanel Width="120" Height="70" Orientation="Vertical" Margin="10,0">
				
				<TextBlock Name="name" Height="30" FontSize="18"  FontWeight="Bold" Text="Name" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
				<StackPanel Height="40">
					<StackPanel Orientation="Horizontal" Height="20">
						
					<TextBlock  Text="等级Level：" Width="60" FontFamily="华文新魏" TextAlignment="Center" ></TextBlock>
						<TextBlock Name="level"  FontWeight="Bold" Text="Level" TextAlignment="Center" FontFamily="Consolas"  ></TextBlock>
					</StackPanel>
					<TextBlock Name="score" Text="Score" TextAlignment="Center"></TextBlock>
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>